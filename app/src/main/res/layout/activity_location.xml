<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:clickable="true"
              android:textAlignment="center"
              android:visibility="visible"
    android:background="@color/backgroundTheme">

    <!--Bishops, Gaffey, Lopez, Sheldon, Toyon-->

    <!--Activity page is divided into 3 equal linear layouts-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--Represents the Bishops button on the Locations Activity-->
            <Button
                android:text="Bishops"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:width="48px"
                android:height="48px"
                android:id="@+id/bishops_button"
                android:layout_weight="1"
                android:layout_margin="40dp"
                android:background="@drawable/bishops_icon"
                android:drawable="@android:color/transparent"
                android:onClick="onBishopsLocationClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--Represents the Gaffey button on the Locations Activity-->
            <Button
                android:text="Gaffey"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/gaffey_button"
                android:layout_weight="1"
                android:layout_margin="40dp"
                android:width="48dp"
                android:height="48dp"
                android:background="@drawable/gaffey_icon"
                tools:textStyle="bold"
                android:textColor="@android:color/background_light"
                android:onClick="onGaffeyLocationClick"/>


        </LinearLayout>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!--Represents the Toyon button on the Locations Activity-->
        <Button
            android:text="Toyon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/_button"
            android:width="48dp"
            android:height="48dp"
            android:layout_margin="40dp"
            android:textColor="@android:color/background_light"
            android:background="@drawable/toyon_icon"
            android:textStyle="normal|bold"
            android:onClick="onToyonLocationClick"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--Represents the Lopez button on the Locations Activity-->
            <Button
                android:text="Lopez"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/lopez_button"
                android:layout_weight="1"
                android:layout_margin="40dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_light"
                android:background="@drawable/lopez_icon"
                android:width="48dp"
                android:height="48dp"
                android:onClick="onLopezLocationClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--Represents the Sheldon button on the Locations Activity-->
            <Button
                android:text="Sheldon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/sheldon_button"
                android:layout_weight="1"
                android:layout_margin="40dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_light"
                android:background="@drawable/sheldon_icon"
                android:onClick="onSheldonLocationClick"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
