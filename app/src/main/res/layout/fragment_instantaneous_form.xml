<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    android:background="@color/backgroundTheme">
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/export_instantaneous_label"
        android:textColor="@color/textLabelColor" />
    <Button
        android:id="@+id/export_instantaneous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/export_button_label"
        android:background="@color/lighterBackgroundTheme"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />
    <LinearLayout  android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/instantaneous_list_grid_label"
            android:textStyle="bold"
            android:textColor="@color/textLabelColor" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/instantaneous_list_methane_level_label"
            android:textStyle="bold"
            android:textColor="@color/textLabelColor" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/instantaneous_list_start_date_label"
            android:textStyle="bold"
            android:textColor="@color/textLabelColor" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Action"
            android:textStyle="bold"
            android:textColor="@color/textLabelColor" />

        <!--
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/instantaneous_list_start_time_label"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/instantaneous_list_end_time_label"
            android:textStyle="bold"/>
-->
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/instantaneous_data_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    </android.support.v7.widget.RecyclerView>


</LinearLayout>

