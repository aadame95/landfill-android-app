<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?android:listSeparatorTextViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/integrated_data_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="0dp"
        android:background="@color/darkThemeButtonBackground"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_marginLeft="-2dp">

        <!--Elements inside CardView-->
        <!--TextView for Label follow by TextView for Data-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkThemeButtonBackground"
            android:padding="16dp">

            <!--Grid ID-->

            <TextView
                android:id="@+id/grid_label_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:text="@string/grid_id_label"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_item_integrated_data_gridid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/grid_label_cv"
                android:textSize="20sp" />

            <!--Bag Number-->
            <TextView
                android:id="@+id/bag_label_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="@string/integrated_list_bag_number_label"
                android:layout_below="@id/grid_label_cv"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_item_integrated_data_bag_number_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grid_label_cv"
                android:layout_toEndOf="@+id/bag_label_cv" />


            <!--Methane Reading-->
            <TextView
                android:id="@+id/methane_reading_label_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bag_label_cv"
                android:layout_marginRight="16dp"
                android:text="@string/ch4_list_item_label"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_item_integrated_data_methane_level_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/methane_reading_label_cv"
                android:layout_toEndOf="@+id/methane_reading_label_cv" />


            <!--Date-->
            <!--<TextView-->
            <!--android:id="@+id/data_label_cv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/methane_reading_label_cv"-->
